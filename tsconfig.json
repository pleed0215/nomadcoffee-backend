{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES5",
    "lib": ["ESNext"],
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*.*"],
  "exclude": ["node_modules"]
}
